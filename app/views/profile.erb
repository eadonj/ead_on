<div class="user-name">
  <% if current_user != @user %>
  <h1><%= @user.email %></h1>
  <% else %>
  <h1>Your Profile</h1>
  <% end %>
</div>

<div class="user-urls">
  <h3>URL's</h3>
<table class="table-striped">
  <th>URL</th>
  <th>Click Count</th>
    <% @user.urls.each do |url| %> 
    <tr><td><a href="http://localhost:9393/urls/<%=url.shortened_url%>"><%= url.shortened_url %></a></td><td><%= url.click_count %></td></tr>
  <% end %> 
</table>
</div>